@model DiaryViewModel
@{
    ViewData["Title"] = "Günlüğü Sil";
}
<h2>“@Model.Title” başlıklı günlüğü silmek istediğinize emin misiniz?</h2>
<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Evet, Sil</button>
    <a asp-action="Index" class="btn btn-secondary">Hayır, Vazgeç</a>
</form>
