@model List<PersonalDiaryApp.UI.Models.DiaryViewModel>

@{
    ViewData["Title"] = "Favori Günlüklerim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<h2 class="mb-4">⭐ Favori Günlüklerim</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">Favorilere eklenmiş herhangi bir günlük yok.</div>
}
else
{
    <div class="row">
        @foreach (var gunluk in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="card-title">@gunluk.Title</h5>
                        <p class="card-text">@gunluk.Content</p>
                        <p class="text-muted"><i class="bi bi-clock"></i> @gunluk.CreatedDate.ToString("dd.MM.yyyy HH:mm")</p>

                        <div class="d-flex justify-content-between">
                            <a asp-controller="Home" asp-action="Detail" asp-route-id="@gunluk.Id" class="btn btn-outline-primary btn-sm">Detay</a>

                            <!-- Favoriden çıkar butonu -->
                            <form asp-controller="Home" asp-action="Unfavorite" method="post">
                                <input type="hidden" name="id" value="@gunluk.Id" />
                                <button type="submit" class="btn btn-sm btn-danger">Favoriden Çıkar</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

